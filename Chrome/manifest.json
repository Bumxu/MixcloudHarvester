{
  "name": "Mixcloud Harvester Downloader",
  "version": "3.2",
  "description": "Direct and fast access to music from Mixcloud",
  "background": { "scripts": ["core.js"] },
  "permissions": [ "tabs", "webRequest", "http://*/*", "https://*/*" ],
  "web_accessible_resources": ["resources/*"],
  "icons" : {
    "24" : "i24.png",
    "32" : "i32.png",
    "128" : "i128.png"
  },
  "manifest_version": 2
}
